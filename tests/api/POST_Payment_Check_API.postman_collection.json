      "name": "Payment Check - Valid",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.expect(pm.response.code).to.equal(200);",
              "});",
              "pm.test('Content-Type is application/json', function () {",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
              "});",
              "pm.test('Response contains success indication', function () {",
              "    const res = pm.response.json();",
              "    pm.expect(res).to.be.an('object');",
              "    pm.expect(res.status || res.message).to.exist.and.to.be.a('string').and.to.have.length.above(0);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"method\": \"Credit Card\",\n  \"account_name\": \"John Doe\",\n  \"account_number\": \"9876543XX\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/payment/check",
          "host": ["{{base_url}}"],
          "path": ["payment", "check"]
        }
      },
      "response": []
